<div class="col-md-4" id="appointment<%= appointment.id %>">

  <!-- appointment preview -->
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-8">
            <% if appointment.app_type == 'MoneyApp' %>
                <i class="fa fa-usd" aria-hidden="true"></i> <%= appointment.title %>
            <% end %>
            <% if appointment.app_type == 'LocationApp' %>
                <i class="fa fa-map-marker" aria-hidden="true"></i> <%= appointment.title %>
            <% end %>
          </div>
          <div class="col-xs-6 col-md-4">
            <div class="app-buttons">
              <a data-toggle="modal" data-target="#detail_app<%= appointment.id %>"><i class="fa fa-search-plus" aria-hidden="true"></i></a>
              <% if builder?(current_user, appointment.id) %>
                  <a href="/appointments/<%= appointment.id %>/edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                  <a href="/appointments/<%= appointment.id %>" data-method="delete" data-remote="true" data-confirm="삭제하시겠습니까?"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
              <% end %>
            </div>
          </div>
        </div>
      </h4>
    </div>
    <div class="panel-body">
      <p>내용: <%= appointment.content %></p>
      <p>마감일: <%= appointment.deadline %></p>
      <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
      </div>
    </div>
  </div>

  <!-- appointment detail Modal -->
  <div class="modal fade" id="detail_app<%= appointment.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">약속 상세보기</h4>
        </div>
        <div class="modal-body">
          <iframe src="/appointments/<%= appointment.id %>"></iframe>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

</div>

