<div class="container">
  <div class="well form-horizontal">
    <fieldset>

      <!-- Form Name -->
      <legend>
        <% case @app_type %>
        <% when 'MoneyApp' %>
            <h3>돈 약속</h3>
        <% when 'LocationApp' %>
            <h3>장소 약속</h3>
        <% end %>
      </legend>

      <%= form_for(@appointment,class:'well form-horizontal') do |f| %>
          <div class="form-group">
            <%= f.label :약속이름 ,class:'col-md-4 control-label' %>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <%= f.text_field :title ,class:'form-control'%>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :content ,class:'col-md-4 control-label' %>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <%= f.text_field :content ,class:'form-control'%>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :deadline ,class:'col-md-4 control-label' %>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <%= datetime_local_field(:appointment, :deadline,class:'form-control',id:'datepicker') %>
                <input type="text" value="" id="datetimepicker"/>
              </div>
            </div>
          </div>

      <!-- radio checks -->
      <div class="form-group">
        <label class="col-md-4 control-label">닥달강도</label>
        <div class="col-md-4">
          <div class="radio">
            <label>
              <input type="radio" name="hosting" value="1" /> 순한닥달이
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="hosting" value="2" /> 급한닥달이
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="hosting" value="3" /> 성격나쁜닥달이
            </label>
          </div>
        </div>
      </div>
          <%= yield f %>
          <%= hidden_field_tag(:app_type, @app_typ,class:'') %>
      <!-- Success message -->
      <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up">

      </i> 목록을 빠짐없이 작성해 주셔야 약속이 생성됩니다. </div>

      <!-- Button -->
      <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-4">
          <%= f.submit '만들기',class:'btn btn-default btn-lg' %>
          <a href="/home/show_my_page" class="mask">
            <button class="btn btn-default btn-lg">약속목록</button>
          </a>
        </div>
       </div>
      <% end %>
    </fieldset>
  </div>
</div>
</div><!-- /.container -->

