<div>
  <% case @app_type %>
  <% when 'MoneyApp' %>
      <h3>돈 약속</h3>
  <% when 'LocationApp' %>
      <h3>장소 약속</h3>
  <% end %>

  <%= form_for(@appointment) do |f| %>
      <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div>
        <%= f.label :content %>
        <%= f.text_area :content %>
      </div>

      <div>
        <%= f.label :deadline %>
        <%= datetime_local_field(:appointment, :deadline) %>
        <input type="text" value="" id="datetimepicker"/>
      </div>

      <br>

      <div>
        <p>주기 설정</p>
        <%= radio_button_tag(:period,30) %>
        <%= label_tag(:period, "30분") %>
        <%= radio_button_tag(:period, 60) %>
        <%= label_tag(:period, "1시간") %>
        <%= radio_button_tag(:period, 120) %>
        <%= label_tag(:period, "2시간") %>
        <%= radio_button_tag(:period, 180) %>
        <%= label_tag(:period, "3시간") %>
      </div>
      <%= yield f %>

      <%= hidden_field_tag(:app_type, @app_type) %>

      <%= f.submit 'submit' %>
  <% end %>

</div>
