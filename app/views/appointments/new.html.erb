<form action="/appointments/new">
  <div class="form-group">
    <label for="sel1">Select list:</label>
    <select class="form-control" name="type">
      <option value="MoneyApp">돈 약속</option>
      <option value="LocationApp">장소 약속</option>
      <option>시간 약속</option>
      <option>의견 약속</option>
    </select>
  </div>
  <input type="submit" >
</form>


<article>
  <% if @type == 'MoneyApp' %>

      <h3>돈 약속</h3>
      <p><%= link_to '장소 약속하기', new_appointment_path(type: 'LocationApp') %></p>
      <%= render 'form' %>

  <% elsif @type == 'LocationApp' %>

      <h3>장소 약속</h3>
      <p><%= link_to '돈 약속하기', new_appointment_path(type: 'MoneyApp') %></p>
      <%= render 'form' do |f| %>
          <div>
            <%= f.label :location %>
          </div>
      <% end %>

  <% end %>
</article>