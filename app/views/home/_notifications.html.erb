<style>
@import url(//fonts.googleapis.com/earlyaccess/nanumgothiccoding.css);
  .row{
    margin-top: 10px;
  }
  h3{
    text-align: center;
    margin-bottom: 20px;
  }
  .fa-check-circle:hover{
    color: green;
  }
</style>

<% notifications.each do |n| %>
  <div class="row">
    <div class="notification">
      <div class="col-xs-6 col-sm-6">
        <p><%= n.requester.nickname %>님의 초대</p>
        <p><%= raw(n.message) %></p>
      </div>
      <div class="col-xs-6 col-sm-6">
        <% case n.type %>
        <% when 'AppNote' %>
          <a href="/infos?notification_id=<%= n.id %>" data-method="post"><h3><i class="fa fa-check-circle" aria-hidden="true"></i></a>
        <% when 'FriendNote' %>
            <%= link_to '수락', '/' %>
        <% else %>
            ...
        <% end %>
          <a href="/notifications/<%= n.id %>" data-method="delete"><i class="fa fa-times-circle" aria-hidden="true"></i></h3></a>
      </div>
    </div>
  </div>
<% end %>