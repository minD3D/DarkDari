<article>
  <h3>약속</h3>
  <% @appointments.each do |app| %>
      <p><%= link_to "#{app.title}", appointment_path(app) %></p>
  <% end %>
  <%= link_to '약속 하기', new_appointment_path(type: 'MoneyApp') %>
</article>

<article>
  <h3>알림</h3>
  <% @notifications.each do |n| %>
      <div class="notification">
        <p><%= n.requester.nickname %>님의 초대</p>
        <p><%= raw(n.message) %></p>
        <% case n.type %>
        <% when 'AppNote' %>
            <%= link_to '수락', money_infos_path(note_id: n.id), method: :post %>
        <% when 'LocationNote' %>
            <%= link_to '수락', '/' %>
            <%# location_info 생성 %>
        <% else %>
            ...
        <% end %>
        <%= link_to '거절', notification_path(n), method: :delete %>
      </div>
  <% end %>
</article>