<!-- Page Content -->
<div class="container">
  <div class="row section-padding">
    <div class="col-xs-12 col-sm-6">
      <h2 class="subs-title"><i class="fa fa-bell-o" aria-hidden="true"></i> 알림</br></br></h2>
      <h5>저희 닦달 서비스를 이용해주셔서 감사합니다.</h5></br>
    </div>
    </br>
    <article class="container">
      <div class="col-xs-6 col-sm-6">
        <%= render 'notifications', notifications: @notifications %>
      </div>
    </article>
  </div>
</div></br>

<article class="container">
  <!-- Marketing Icons Section -->
  <div class="row">
    <div class="col-lg-12">
      <!--<h1 class="page-header">
        My Page
      </h1>-->
    </div>
    <% @appointments.each do |app| %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>
                <div class="row">
                  <div class="col-xs-12 col-sm-6 col-md-8">
                    <% if app.app_type == 'MoneyApp' %>
                        <i class="fa fa-usd" aria-hidden="true"></i><%= app.title %>
                    <% end %>
                    <% if app.app_type == 'LocationApp' %>
                        <i class="fa fa-map-marker" aria-hidden="true"></i><%= app.title %>
                    <% end %>
                  </div>
                  <div class="col-xs-6 col-md-4">
                    <a data-toggle="modal" data-target="#detail_app<%= app.id %>"><i class="fa fa-search-plus" aria-hidden="true"></i></a>
                    <% if builder?(current_user, app.id) %>
                        <a href="/appointments/<%= app.id %>/edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a href="/appointments/<%= app.id %>" data-method="delete" data-confirm="삭제하시겠습니까?"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    <% end %>
                  </div>
                </div>
              </h4>
            </div>
            <div class="panel-body">
              <p>내용: <%= app.content %></p>
              <p>마감일: <%= app.deadline %></p>
              <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
              </div>
            </div>
          </div>
        </div>
        <!-- appointment detail Modal -->
        <div class="modal fade" id="detail_app<%= app.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">약속 상세보기</h4>
              </div>
              <div class="modal-body">
                <iframe src="/appointments/<%= app.id %>"></iframe>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>

    <% end %>
  </div>
</article>
