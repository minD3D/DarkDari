<!DOCTYPE html>
<html>
<head>
  <title>DarkDari</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <style>
    body {
      padding-top: 150px;
    }
  </style>
  <script src="http://maps.googleapis.com/maps/api/js?libraries=places&key=<%= ENV['google_map_key'] %>"></script>
</head>

<body>

<nav class="navbar navbar-default navbar-fixed-top topnav navigation" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand topnav" href="/"><img src="/logo.png" style="width:180px; height:130px; padding-top: 10px;" alt="로고"></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right" style="float:right">
        <li class="menu__item">
          <a href="/#about" class="menu__link">
            <span class="menu__title">
              <span class="menu__first-word" data-hover="사용" id="p3">사용</span>
              <span class="menu__second-word" data-hover="법" id="p3">법</span>
            </span>
          </a>
        </li>
        <li class="menu__item">
          <a href="/home/show_my_page" class="menu__link">
            <span class="menu__title">
              <span class="menu__first-word" data-hover="마이" id="p3">마이</span>
              <span class="menu__second-word" data-hover="페이지" id="p3">페이지</span>
            </span>
          </a>
        </li>
        <% if current_user %>
            <li class="menu__item">
              <a href="/users/sign_out" data-method="delete" class="menu__link">
                <span class="menu__title">
                  <span class="menu__first-word" data-hover="로그" id="p3">로그</span>
                  <span class="menu__second-word" data-hover="아웃" id="p3">아웃</span>
                </span>
              </a>
            </li>
            <li class="menu__item">
              <%= link_to "#{current_user.nickname}", edit_user_registration_path, class: 'username' %>
            </li>
        <% else %>
            <li class="menu__item">
              <a href="/users/sign_in" class="menu__link">
                <span class="menu__title">
                  <span class="menu__first-word" data-hover="로그" id="p3">로그</span>
                  <span class="menu__second-word" data-hover="인" id="p3">인</span>
                </span>
              </a>
            </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<%= yield %>

<!-- Footer -->
<footer>x
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="container">
          <ul class="list-inline">
          <li>
            <a href="/">Home</a>
          </li>
          <li class="footer-menu-divider">&sdot;</li>
          <li>
            <a href="/#about">About</a>
          </li>
          <li class="footer-menu-divider">&sdot;</li>
          <li>
            <a href="/#/home/showMyPage">Mypage</a>
          </li>
        </ul>
        </div>
        <p class="copyright text-muted small">Copyright &copy; Team DakDal. All Rights Reserved</p>
        <p class="copyright text-muted small">Likelion_5th Inha Univ </p>
        <p class="copyright text-muted small" style="float: right">2017_Dakkdari</p>
      </div>
    </div>
  </div>
</footer>
</body>
</html>